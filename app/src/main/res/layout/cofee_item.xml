<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/coffeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee Name"
            android:textColor="#FF69B4"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/coffeeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coffeeName"
            android:layout_marginTop="5dp"
            android:background="@drawable/category_chip"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="Hot"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/coffeePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="$5.99"
            android:textColor="#FF69B4"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/coffeeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coffeeCategory"
            android:layout_marginTop="10dp"
            android:text="Coffee description here"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/coffeeEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/coffeePrice"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_edit"
            app:tint="#FF69B4"/>

        <ImageView
            android:id="@+id/coffeeDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/coffeeEdit"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_delete"
            app:tint="#FF4081"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>